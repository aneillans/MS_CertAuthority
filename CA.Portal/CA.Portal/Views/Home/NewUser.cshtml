@model CA.Portal.Models.BaseUserModel

@{
    ViewBag.Title = "NewUser";
}

<h2>Edit User</h2>

<p>@ViewBag.Message</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2" for="Account">Account</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="DefaultGroup" name="Account" type="text" value="@User.Identity.Name" readonly/>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Roles, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Roles, Model.RolesForDropDown, new { htmlAttributes = new { @class = "form-control" } })
                @*@Html.ValidationMessageFor(model => modelRoles, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
